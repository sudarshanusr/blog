.row
  .container.well.col-md-5.col-md-offset-3
    %legend Log in
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.input :email, required: false, autofocus: true, class: 'form-control'
        = f.input :password, required: false, class: 'form-control'
        = f.input :remember_me, as: :boolean , class: 'form-control' if devise_mapping.rememberable?
      .form-actions.col-md-4.col-md-offset-5
        = f.button :submit, "Log in" ,class: 'btn btn-primary'
    .col-md-4.col-md-offset-5= render "devise/shared/links"
