%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-2", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Sudarshan's Blog
    #bs-example-navbar-collapse-2.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to edit_user_registration_path do
                  %i.fa.fa-key{"aria-hidden" =>"true"}
                    %span &nbsp;Change Password
              %li.divider
              %li
                = link_to destroy_user_session_path do 
                  %i.fa.fa-sign-out{"aria-hidden" =>"true"}
                    %span &nbsp;Logout
