.row
  .container.col-md-6.col-md-offset-3.form-horizontal
    .well
      %legend Edit Post
      = form_for @post do |f|
        %p
          .form-group 
            .col-md-10.col-md-offset-1
              = f.label 'Title' ,:title
              %br/
              = f.text_field :title,class: 'form-control'
              %br/
        %p
          .form-group 
            .col-md-10.col-md-offset-1
              = f.label 'Body' ,:body
              %br/
              = f.text_area  :body,class: 'form-control',rows: 8
              %br/
          .form-group
            .col-md-4.col-md-offset-5
              = f.submit 'Update', class: 'btn btn-primary'
              
