.row
  .col-md-6.col-md-offset-3
    = link_to 'Add New Post',new_post_path
    %br/
    %table.table.table-striped.table-hover
      %thead
        %tr
    %h2 All Posts
    %tbody
      %tr
        %td
          - @posts.each do |post|
            %p
            .panel.panel-primary
              .panel-heading
                %h3.panel-title= link_to post.title,post_path(post)
              %p
              .panel-body
                = post.body
                %br/
            .col-md-6
              = link_to 'show',post
              | #{link_to 'edit',edit_post_path(post)} | #{link_to 'delete',post,method: :delete}
            .panel-body{:align => "right", :style => ""}
              = image_tag "blogcmntsIcon.png"
              = post.comments.count
              = "Comments"