%h2.col-md-offset-5 MailersList
#my-modal
.row
  .container.col-md-6.col-md-offset-3
    %button{:class => "btn btn-primary" ,:onclick => "tag()", :remote =>false}TAG
    .well
      %table.table.table-strped.table-hover
        %thead
          %tr
            %th #
            %th Name
            %th Email
            %th Mobile
        %tbody
          - @mailers.each do |mailer|
            %tr   
              %td
                %input{:onclick => "check(#{mailer.id})",:id => "check_#{mailer.id}" ,:type => "checkbox"}              
              %td= mailer.name
              %td= mailer.email
              %td= mailer.mobile
              %td=link_to 'Edit', edit_mailer_path(mailer.id) 
      .col-md-offset-5  
        %button{:class => "btn btn-primary" ,:onclick => "send()",:id => "submit", :type => "button", :id =>"my_link" ,:remote =>false} Send Email
        =link_to 'Create', new_mailer_path

          
        
        





