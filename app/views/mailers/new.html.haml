.row
.row
  .container.col-md-6.col-md-offset-3.form-horizontal
    .well
      %legend New Mailer
      = simple_form_for @mailer do |f|
        .form-group 
          .col-md-10.col-md-offset-1
            = f.input :name, class: 'form-control'
          .col-md-10.col-md-offset-1
            = f.input  :email,class: 'form-control'
          .col-md-10.col-md-offset-1
            = f.input  :mobile,class: 'form-control'
        .form-group
          .col-md-4.col-md-offset-5
            = f.submit 'Submit', class: 'btn btn-primary'
