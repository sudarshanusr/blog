.row
  .container.col-md-6.col-md-offset-3.form-horizontal
    .well
      %legend Edit Mailer
      = form_for @mailer do |f|
        %p
          .form-group 
            .col-md-10.col-md-offset-1
              = f.label 'Name' ,:name
              %br/
              = f.text_field :name,class: 'form-control'
              %br/
        %p
          .form-group 
            .col-md-10.col-md-offset-1
              = f.label 'Email' ,:email
              %br/
              = f.text_field  :email,class: 'form-control',rows: 8
              %br/
        %p
          .form-group 
            .col-md-10.col-md-offset-1
              = f.label 'Mobile' ,:mobile
              %br/
              = f.text_field  :mobile,class: 'form-control',rows: 8
              %br/      
          .form-group
            .col-md-4.col-md-offset-5
              = f.submit 'Update', class: 'btn btn-primary'
              
