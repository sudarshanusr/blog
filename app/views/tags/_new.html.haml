.container.col-md-6.col-md-offset-3.form-horizontal
  .modal
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
          %h4.modal-title Create Tag
        .modal-body
          = simple_form_for @tag do |f|
            .form-group 
              .col-md-10.col-md-offset-1
                = f.input :name, class: 'form-control'
            .form-group 
              .col-md-10.col-md-offset-1
                = f.hidden_field 'ids', :value => params[:ids],:multiple => true
            .form-group
              .col-md-4.col-md-offset-5
                = f.submit 'Submit', class: 'btn btn-primary', :id => 'my-link' 
