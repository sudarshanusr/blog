.well{:tyle => "background-color:#f5f5f5;"}
  = form_for ([@post,@post.comments.build]) do |f|
    %p
      = f.label 'Name' ,:name
      %br/
      = f.text_field :name
      %br/
    %p
      = f.label 'Body' ,:body
      %br/
      = f.text_area  :body
      %br/
    = f.submit 'Submit',class: "btn btn-primary"
